@model List<Knuchs.Web.Models.BlogEntry>
@{
    ViewBag.Title = "Homepage";
}

<!-- Required -->
<script>
    var jq = jQuery.noConflict();
    jq(function () {
        jq('#slider').anythingSlider({
            theme: 'metallic',
            expand: true,
            autoPlay: false,


        })
    });
</script>

@*<div id="blogHeader">
    <div id="Title">
