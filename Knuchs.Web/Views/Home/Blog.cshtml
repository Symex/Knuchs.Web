*@


<div id="slider" class="anythingSlider anythingSlider-metallic">
    @foreach (var entry in Model)
    { 
        <div class="slider-centered">
            <div class="blogEntryHeader">
                @entry.Title
                 @entry.CreatedOn
               @Html.ActionLink("Show Discussion for this Topic", "ShowComments", new { entryId = entry.Id })
           
            </div>
            <div class="scrollableContent">
                <p class="">@entry.Text </p>
            </div>

        </div>
    }
</div>

