@model Knuchs.Web.Models.LoginModel

@{
    ViewBag.Title = "Anmelden";
}
<div class="contentWrapper">
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

    @using (Html.BeginForm("LoginCallBack","Account")) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        

           <table>
                <tr>
                  <td>  @Html.LabelFor(m => m.Username)</td>
                   <td>   @Html.TextBoxFor(m => m.Username)</td>
                   <td>   @Html.ValidationMessageFor(m => m.Username)</td>
                </tr>
                <tr>
                   <td>   @Html.LabelFor(m => m.Password)</td>
                   <td>   @Html.PasswordFor(m => m.Password)</td>
                   <td>   @Html.ValidationMessageFor(m => m.Password)</td>
                </tr>
                <tr>
                  <td colspan="3">    @Html.CheckBoxFor(m => m.RememberMe)
                     @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox", @checked=true})

                  </td>
                </tr>
          
            
            @Html.HiddenFor(m=>m.ReturnUrl)
               <tr>
                   <td colspan="3">
                       <input type="submit" value="Anmelden" />
                   </td>
               </tr>  
       
      </table>
        <p>Du besitzt noch kein Konto? Jetzt @Html.ActionLink("Registrieren", "Register")!</p>
    
        
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    </div>