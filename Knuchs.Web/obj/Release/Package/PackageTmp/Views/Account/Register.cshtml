@model Knuchs.Web.Models.User
@{
    ViewBag.Title = "Registrieren";
}
<div class="contentWrapper">
    <div class="panel panel-default">
        <div class="panel-heading">
            Neues Benutzerkonto erstellen
        </div>

        <div class="panel-body">
            @using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()  
                <p>
                     <b> Benutzername</b>
                    @Html.TextBoxFor(m => m.Username, new { @Class = "form-control" })
                    <p style="color: orange">   @Html.ValidationMessageFor(m => m.Username)</p> 
                </p>
                <p>
                     <b> Passwort</b>
                    @Html.PasswordFor(m => m.Password, new { @Class = "form-control" })
                   <p style="color: orange">    @Html.ValidationMessageFor(m => m.Password)</p> 
                </p>
                <p>
                    <b>Passwort wiederholen</b>
                    <input type="password" name="pwcheck" class="form-control" />
                </p>
                <p>
                    <b>Email</b>
                    @Html.TextBoxFor(m => m.Email, new { @Class = "form-control" })
              <p style="color: orange">     @Html.ValidationMessageFor(m => m.Email)</p> 
                </p>
                <p>
                    @Html.CheckBoxFor(m => m.HasNewsletter)
                    @Html.Raw("Möchtest du einen möglicherweise in Zukunft erscheinenden Newsletter erhalten? Deine Email-Adresse bleibt vertraulich.")

                </p>
           
                <input type="submit" value="Registrieren" class="btn btn-default" />
            }
        </div>
    </div>



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
